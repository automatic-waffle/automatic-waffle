{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node",
    "extends": "./base.json",
    "compilerOptions": {
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "types": ["node", "jest"],
        "lib": ["es2020", "dom"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "esModuleInterop": true
    },
    "include": ["**/*.ts", "**/*.d.ts"],
    "exclude": ["node_modules", "dist"]
}
